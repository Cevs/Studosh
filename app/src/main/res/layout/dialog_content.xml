<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Kriterij"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/eT_criterion" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/eT_criterion"
        android:layout_alignEnd="@+id/eT_criterion"
        android:layout_marginTop="45dp"
        android:id="@+id/eT_points"
        android:hint="Ostvareni bodovi" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_marginTop="64dp"
        android:id="@+id/eT_maxPoints"
        android:layout_below="@+id/eT_points"
        android:layout_alignStart="@+id/eT_points"
        android:hint="Moguci bodovi" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/book_2"
        android:id="@+id/imageView4"
        android:layout_centerInParent="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:background="@color/transparentColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Kolegij:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFragment_courseName"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_above="@+id/textView16"
                android:layout_alignStart="@+id/tvFragment_semester" />

            <TextView
                android:text="Semestar:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFragment_semester"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginStart="25dp"
                android:layout_below="@+id/tvFragment_courseName"
                android:layout_toEndOf="@+id/textView16" />

            <TextView
                android:text="Kolegij:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_marginStart="59dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_alignBaseline="@+id/tvFragment_courseName"
                android:layout_alignBottom="@+id/tvFragment_courseName"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Semestar:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/textView14" />

        </RelativeLayout>


    </FrameLayout>








</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:text="Kolegij:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvFragment_courseName"
        android:layout_alignParentStart="true"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Semestar:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignBaseline="@+id/tvFragment_semester"
        android:layout_alignBottom="@+id/tvFragment_semester"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragment_semester"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Semester"
        android:layout_marginRight="189dp"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvFragment_courseName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="127dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvFragment_semester" />
</RelativeLayout>